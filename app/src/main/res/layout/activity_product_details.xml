<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"

    tools:context=".ProductDetailsActivity">


    <ImageButton
        android:id="@+id/imageView_Cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
android:background="#001FD01B"
        app:layout_constraintBottom_toTopOf="@+id/imageViewProduct_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:background="@drawable/details_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/grren_back"
            android:gravity="center"
            android:padding="5dp"
            android:text="Golden"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detail_Type_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/grren_back"
            android:gravity="center"
            android:padding="5dp"
            android:text="Dry"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/detail_Title_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="Japanese Cherry Blossom"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/detail_Price_id"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/detail_Price_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="$ 15.00"
            android:textColor="#42995C"
            android:textSize="20sp"
            android:padding="5dp"
            android:background="@drawable/details_back"
            app:layout_constraintBottom_toBottomOf="@+id/detail_Title_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detail_Title_id" />

        <TextView
            android:id="@+id/textView_details_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="2dp"
            android:padding="5dp"
            android:text="A moisturizing body with a sweet and refreshing aroma of Japanese cherry blossom, peony, musk, and strawberry. Will make the skin feel moist and smooth. The combination also makes long-lasting fragrance."
            app:layout_constraintEnd_toEndOf="@+id/detail_Price_id"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toStartOf="@+id/detail_Title_id"
            app:layout_constraintTop_toBottomOf="@+id/detail_Title_id" />

        <ImageView
            android:id="@+id/Image_Decrement_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Quantity_id"
            app:layout_constraintEnd_toStartOf="@+id/textView_Quantity_id"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_Quantity_id"
            app:layout_constraintVertical_bias="0.586"
            app:srcCompat="@drawable/ic_baseline_indeterminate_check_box_24" />

        <TextView
            android:id="@+id/textView_Quantity_id"
            android:layout_width="50dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.123"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_details_id"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/image_increment_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_Quantity_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView_Quantity_id"
            app:layout_constraintTop_toTopOf="@+id/textView_Quantity_id"
            app:layout_constraintVertical_bias="0.586"
            app:srcCompat="@drawable/ic_baseline_add_box_24" />

        <Button
            android:id="@+id/button_Cart_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/addcart_background"
            android:padding="10dp"
            android:paddingRight="5dp"
            android:text="Add to Cart"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/image_increment_id"
            app:layout_constraintTop_toBottomOf="@+id/textView_details_id"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView_Total_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" $....."
            android:textColor="#42995C"

            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_Cart_id"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Quantity_id"
            app:layout_constraintVertical_bias="0.483" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50g"
            android:textColor="#42995C"

            app:layout_constraintBottom_toTopOf="@+id/button_Cart_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.928"
            app:layout_constraintStart_toEndOf="@+id/image_increment_id"
            app:layout_constraintTop_toBottomOf="@+id/textView_details_id"
            app:layout_constraintVertical_bias="0.584" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageViewProduct_id"
        android:layout_width="274dp"
        android:layout_height="219dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:transitionName="image"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173"
        app:srcCompat="@drawable/logogreen" />

    <ImageView
        android:id="@+id/imageView_backButton_id"
        android:layout_width="44dp"
        android:layout_height="25dp"
        android:onClick="onClick"

        app:layout_constraintBottom_toTopOf="@+id/imageViewProduct_id"
        app:layout_constraintEnd_toStartOf="@+id/imageView_Cart"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"
        tools:ignore="OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>
